<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Detail">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/detail_img"
        android:layout_width="150dp"
        android:layout_height="200dp" />
    <TextView
        android:id="@+id/detail_judul"
        android:layout_toEndOf="@id/detail_img"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        tools:text="NOMOR ABID GANS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/detail_detail"
        android:layout_toEndOf="@id/detail_img"
        android:layout_below="@id/detail_judul"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:text="Keterangan blablablablablabla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/detail_nomor"
        android:layout_toEndOf="@id/detail_img"
        android:layout_below="@id/detail_detail"
        android:layout_margin="10dp"
        android:text="@string/hubungi_sekarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>